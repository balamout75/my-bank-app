<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">


    <changeSet id="03-service-operations-table" author="Ivan Vasilyev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="accounts" tableName="service_operations"/>
            </not>
        </preConditions>

        <createTable  schemaName="accounts" tableName="service_operations">
            <column name="operation_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="service_operations_pkey"/>
            </column>
            <column name="service" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="applied_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="service_operations" indexName="idx_applied_ops_username">
            <column name="username"/>
        </createIndex>
        <rollback>
            <dropTable tableName="service_operations"/>
        </rollback>
    </changeSet>
</databaseChangeLog>