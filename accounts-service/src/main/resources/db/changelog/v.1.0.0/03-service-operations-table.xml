<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">


    <changeSet id="03-service-operations-table" author="Ivan Vasilyev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="accounts" tableName="service_operations"/>
            </not>
        </preConditions>

        <createTable  schemaName="accounts" tableName="service_operations">
            <column name="operation_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="service" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
            <column name="applied_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey schemaName="accounts" tableName="service_operations" columnNames="service, operation_id" constraintName="service_operations_pkey"/>

        <createIndex schemaName="accounts" tableName="service_operations" indexName="idx_srv_ops_username">
            <column name="username"/>
        </createIndex>

        <!-- если часто ищешь по service+username -->
        <createIndex schemaName="accounts" tableName="service_operations" indexName="idx_srv_ops_service_username">
            <column name="service"/>
            <column name="username"/>
        </createIndex>

        <rollback>
            <dropTable schemaName="accounts" tableName="service_operations"/>
        </rollback>
    </changeSet>
</databaseChangeLog>